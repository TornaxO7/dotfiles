set $mod Mod4

exec --no-startup-id flameshot

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 8

default_border pixel 0

tiling_drag modifier titlebar
floating_modifier $mod

# == keybindings ==
bindsym XF86AudioRaiseVolume exec --no-startup-id wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 2%+
bindsym XF86AudioLowerVolume exec --no-startup-id wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 2%-
bindsym XF86AudioMute exec --no-startup-id wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle

bindsym $mod+7 "exec --no-startup-id playerctl -p spotify,spotify_player next"
bindsym $mod+8 "exec --no-startup-id playerctl -p spotify,spotify_player previous"
bindsym $mod+9 "exec --no-startup-id playerctl -p spotify,spotify_player play-pause"

bindsym $mod+l focus right
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up

bindsym $mod+Shift+l move right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up

bindsym $mod+w layout tabbed
bindsym $mod+p layout splith

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"

bindsym $mod+n workspace number $ws1
bindsym $mod+r workspace number $ws2
bindsym $mod+s workspace number $ws3
bindsym $mod+g workspace number $ws4
bindsym $mod+q workspace number $ws5
bindsym $mod+z workspace number $ws6

bindsym $mod+Shift+n move workspace number $ws1
bindsym $mod+Shift+r move workspace number $ws2
bindsym $mod+Shift+s move workspace number $ws3
bindsym $mod+Shift+g move workspace number $ws4
bindsym $mod+Shift+q move workspace number $ws5
bindsym $mod+Shift+z move workspace number $ws6

# == assigns
assign [class="discord"] workspace number $ws4
assign [class="spotify"] workspace number $ws5

# == utilities + applications ==
bindsym $mod+Return exec --no-startup-id rio
bindsym $mod+e exec --no-startup-id firefox
bindsym $mod+i exec --no-startup-id rofi -show run
bindsym $mod+t exec --no-startup-id flameshot gui

bindsym $mod+Shift+f move scratchpad
bindsym $mod+f scratchpad show

bindsym $mod+Shift+a kill
bindsym $mod+Shift+d restart
bindsym $mod+Shift+u exec i3-msg exit
